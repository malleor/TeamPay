

<div class="container">


  <div class="row">
    <div class="col-lg-8 col-lg-offset-2" style="box-shadow: 0px -2px 3px rgba(0,0,0,0.16), 0px 3px 3px rgba(0,0,0,0.23); margin-bottom: 1em;">

      <div class="container">
        <div class="row" style="margin-bottom:30px; ">
          <div class="col-lg-8">
            <h1><%= @voting.team.name %> <small>- Bonuses #<%= @voting.id() %></small></h1>
          </div>
        </div>

        <div class="row" style="margin-bottom:30px; ">
          <div class="col-lg-7 text-right">
            <h3>Team bonus: <%= @voting.total %> PLN</h3>
          </div>
        </div>
      </div>

    <table class="table table-striped table-hover">
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Bonus</th>
        <th>Voted?</th>
      </tr>

      <%
         num = 0
         @voting.voting_entries.each do |entry|
            member = User.find(entry.member_id)
      %>
      <tr>
        <td><%= num = num + 1 %></td>
        <td><%= member.name %></td>
        <td><%= entry.amount %>PLN</td>
        <td>Yes</td>
      </tr>
      <% end %>
    </table>

      <div class="row">
        <div class="col-md-12 text-right" style="color: #999999; padding: 1em;">Generated: 20-09-2014 godz. 12:15</div>
      </div>
    </div>
  </div>
</div>