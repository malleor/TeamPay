<%
   team = Team.first
%>

<% content_for :headline do %>
    Award the team
<% end %>

<div class="row">
  <div class="col-lg-12">
    <h4><%= team.name %></h4>

    <table class="table table-striped table-hover">
      <tr>
        <th>#</th>
        <th>Name</th>
      </tr>

      <%
         num = 0
         team.members.each do |member|
      %>
          <tr>
            <td><%= num = num + 1 %></td>
            <td><%= member.name %></td>
          </tr>
      <% end %>
    </table>
  </div>
  <div class="col-lg-12" style="padding-top: 5em;">
    <div class="text-left">
      <input type="input" style="font-size: 1.5em; width: 4.5em;"/> PLN<br/><br/>
      <a href="#" class="btn btn-large btn-info" id="set-bonus">Ustaw</a>
    </div>
  </div>
</div>
