<!DOCTYPE html>
<html>
<head>
  <title>TeamPlay</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>

<div class="navbar navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-lg-offset-1 navbar-cell">
        <div class="navbar-header">
          <a class="navbar-brand" id="brand" href="#">TeamPlay</a>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- CONTENT -->
<div class="container">

  <!-- HEADLINE -->
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 headline">
      <h1>
        <%= yield :headline %>
      </h1>
    </div>
  </div>

  <!-- BODY -->
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <%= yield %>
    </div>
  </div>

</div>

</body>
</html>
